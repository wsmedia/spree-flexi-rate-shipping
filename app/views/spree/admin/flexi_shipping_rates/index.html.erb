<div class='toolbar'>
  <ul class='actions'>
    <li>
      <%= button_link_to "New Flexi Shipping Rate", new_admin_flexi_shipping_rate_url, :icon => 'add'  %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1>Flexi Shipping Rates</h1>

<table class="index">
  <thead>
    <tr>
	    <th><%= Spree::FlexiShippingRate.human_attribute_name("shipping_category") %></th>
      <th><%= Spree::FlexiShippingRate.human_attribute_name("zone")%></th>
      <th><%= Spree::FlexiShippingRate.human_attribute_name("first_item_price")%></th>
      <th><%= Spree::FlexiShippingRate.human_attribute_name("additional_item_price")%></th>
      <th><%= Spree::FlexiShippingRate.human_attribute_name("max_number_of_items")%></th>
			<th><%= t("action")%></th>
    </tr>
  </thead>
  <tbody>
    <% @flexi_shipping_rates.each do |flexi_shipping_rate| %>
      <tr>
        <td><%=flexi_shipping_rate.shipping_category.name %></td>
        <td><%=flexi_shipping_rate.zone.name %></td>
        <td><%=number_to_currency(flexi_shipping_rate.first_item_price) %></td>
        <td><%=number_to_currency(flexi_shipping_rate.additional_item_price) %></td>
        <td><%=flexi_shipping_rate.max_items %></td>
        <td>
          <%= link_to_edit flexi_shipping_rate %> &nbsp;
          <%= link_to_delete flexi_shipping_rate %>
        </td>
      </tr>
    <% end %>
    <% if @flexi_shipping_rates.empty? %>
      <tr><td colspan="5">None.</td></tr>
    <% end %>
  </tbody>
</table>
